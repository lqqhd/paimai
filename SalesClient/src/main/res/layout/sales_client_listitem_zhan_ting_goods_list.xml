<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10">


        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/goods_003" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_imgs"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/img"
            android:gravity="center|left"
            android:text="民国二十年"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:id="@+id/tv_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img"
            android:gravity="center|left"
            android:text="当前￥10000"
            android:textColor="#893E3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img"
            android:gravity="center|left"
            android:text="出价0次"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_wei_guan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img"
            android:gravity="center|left"
            android:text="围观22次"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/ll_pai_mai"
            android:background="#ACACAD" />


        <LinearLayout
            android:id="@+id/ll_pai_mai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_pai_mai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_pai_mai" />

            <TextView
                android:id="@+id/tv_ren_shu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="立即拍"
                android:textColor="#ACACAD"
                android:textSize="@dimen/public_font_12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
