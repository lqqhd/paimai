<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_white"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/public_white"
        android:orientation="vertical">

        <include layout="@layout/public_toolbar" />


        <ImageView
            android:id="@+id/home_item_product_img"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:adjustViewBounds="true"
            android:contentDescription="@string/salas_client_app_name"
            android:scaleType="fitXY"
            android:src="@mipmap/arms_log"
            tools:background="#fff0f0f0" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="Version 2"
            android:textColor="@color/public_black"
            android:textSize="@dimen/public_font_14sp" />

        <Button
            android:id="@+id/btn_jian_cha_ban_ben"
            style="@style/public_Button"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:text="检查更新"
            android:textSize="@dimen/public_font_14sp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="青岛记忆 版权所有\n\n Copyright\@2018-2018 .All Rights Reserved"
        android:textColor="@color/public_black"
        android:textSize="@dimen/public_font_12sp" />

</RelativeLayout>
