<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10">


        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/arms_log" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img_logo"
            android:background="@drawable/public_shape_red_bg_corner_5dp"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="大行"
            android:textColor="@color/public_white"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_name"
            android:gravity="center|left"
            android:padding="@dimen/dp_5"
            android:text="xx的店铺"
            android:textColor="#676767"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:id="@+id/tv_dang_qian_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img_logo"
            android:gravity="center|left"
            android:text="信誉值0"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_chu_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_dang_qian_jia"
            android:gravity="center|left"
            android:text="好评100%"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_xiao_shou_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chu_jia"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/img_logo"
            android:gravity="center|left"
            android:text="销售额0"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_12sp" />


        <TextView
            android:id="@+id/tv_ren_shu"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/public_shape_red_bg_corner_5dp"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="进入"
            android:textColor="@color/public_white"
            android:textSize="@dimen/public_font_12sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rl1_img1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/goods_002" />

            <TextView
                android:id="@+id/tv_fang_wen_liang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1_img1"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:text="访问量10000次"
                android:textColor="#B8B8B8"
                android:textSize="@dimen/public_font_14sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rl1_img2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/goods_001" />

            <ImageView
                android:id="@+id/rl1_img3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/goods_001" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
