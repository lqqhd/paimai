<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10">


        <ImageView
            android:id="@+id/shop_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/goods_001" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_logo"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center|left"
            android:text="铜老虎挂件"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_14sp" />

        <TextView
            android:id="@+id/tv_dang_qian_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center|left"
            android:text="当前￥10000"
            android:textColor="#893E3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_chu_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dang_qian_jia"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center|left"
            android:text="出价0次"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_12sp" />


        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cv_countdownViewTest4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@+id/tv_chu_jia"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@null"
            android:gravity="center"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isTimeTextBold="true"
            app:suffixDay="天"
            app:suffixGravity="bottom"
            app:suffixHour="时"
            app:suffixMillisecond="毫秒"
            app:suffixMinute="钟"
            app:suffixSecond="秒"
            app:suffixTextColor="#893E3D"
            app:suffixTextSize="@dimen/public_font_10sp"
            app:timeTextColor="#893E3D"
            app:timeTextSize="@dimen/public_font_10sp" />


        <TextView
            android:id="@+id/tv_ren_shu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_chu_jia"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="立即拍"
            android:textColor="#ACACAD"
            android:textSize="@dimen/public_font_14sp" />


    </RelativeLayout>

</LinearLayout>
