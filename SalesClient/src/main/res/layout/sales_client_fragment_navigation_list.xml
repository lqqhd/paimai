<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_left_rv"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_navigation_cat1"
            style="@style/public_MineItemRelativeLayout">


            <TextView
                android:id="@+id/item_navigation_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="分类标题"
                android:textColor="@color/public_black"
                android:textSize="@dimen/public_font_14sp" />

            <include layout="@layout/sales_client_include_more" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_right_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF" />


    </LinearLayout>
</LinearLayout>
