<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="-300dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_weibo_home_2"
        app:layout_collapseMode="parallax" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/white" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:titleEnabled="false">

                        <RelativeLayout
                            android:id="@+id/panel_lyt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@color/public_white"
                            android:orientation="vertical"
                            android:paddingTop="100dp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:src="@mipmap/image_avatar_5"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_overlay="true"
                                app:civ_border_width="3dp" />

                            <TextView
                                android:id="@+id/nickname"
                                style="@style/AppTheme.Label.Title"
                                android:layout_below="@id/avatar"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:width="60dp"
                                android:background="@drawable/mine_red_deep_bg"
                                android:gravity="center"
                                android:padding="@dimen/dp_5"
                                android:text="普通"
                                android:textColor="@color/public_white"
                                android:textSize="@dimen/public_font_12sp" />

                            <TextView
                                android:id="@+id/phone"
                                style="@style/AppTheme.Label.Title"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_toRightOf="@+id/avatar"
                                android:text="15800000000"
                                android:textColor="#2f2f2f"
                                android:textSize="@dimen/public_font_16sp" />

                            <TextView
                                android:id="@+id/setting"
                                style="@style/AppTheme.Label.Title"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/phone"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text="设置"
                                android:textColor="#939393"
                                android:textSize="@dimen/public_font_14sp" />


                            <LinearLayout
                                android:id="@+id/relationship"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/phone"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_toRightOf="@+id/avatar">

                                <TextView
                                    android:id="@+id/relationship_attention"
                                    style="@style/AppTheme.Label"
                                    android:text="粉丝 0 "
                                    android:textColor="#8f8f8f"
                                    android:textSize="@dimen/public_font_12sp" />

                                <TextView
                                    style="@style/AppTheme.Label"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:text="|"
                                    android:textColor="#8f8f8f"
                                    android:textSize="@dimen/public_font_12sp" />

                                <TextView
                                    android:id="@+id/relationship_fans"
                                    style="@style/AppTheme.Label"
                                    android:text="关注 0"
                                    android:textColor="#8f8f8f"

                                    android:textSize="@dimen/public_font_12sp" />
                            </LinearLayout>

                        </RelativeLayout>

                    </android.support.design.widget.CollapsingToolbarLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_all_orders"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/public_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="我的订单"
                        android:textColor="#020202"
                        android:textSize="@dimen/public_font_16sp" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/imageView14"
                        android:layout_toStartOf="@+id/imageView14"
                        android:text="查看全部订单"
                        android:textColor="#999999"
                        android:textSize="@dimen/public_font_12sp" />

                </RelativeLayout>

                <include layout="@layout/line_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@color/public_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_dai_fu_kuan"
                        android:layout_width="1dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/order_dai_fu_kuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="待付款"
                            android:textColor="#484848"
                            android:textSize="@dimen/public_font_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dai_fa_huo"
                        android:layout_width="1dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/order_dai_fa_huo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="待发货"
                            android:textColor="#484848"

                            android:textSize="@dimen/public_font_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dai_ping_jia"
                        android:layout_width="1dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/order_dai_shou_huo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="待收货"
                            android:textColor="#484848"
                            android:textSize="@dimen/public_font_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/order_dai_ping_jia" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="待评价"
                            android:textColor="#484848"

                            android:textSize="@dimen/public_font_12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/order_shou_hou" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="售后"
                            android:textColor="#484848"
                            android:textSize="@dimen/public_font_12sp" />

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/line_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_tou_tiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_news" />

                    <TextView
                        android:id="@+id/tv_fen_ge"
                        style="@style/AppTheme.Label"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_tou_tiao"
                        android:text="|"
                        android:textColor="#8f8f8f"
                        android:textSize="@dimen/public_font_12sp" />

                    <TextView
                        style="@style/AppTheme.Label"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_fen_ge"
                        android:text="关于违规处罚"
                        android:textColor="#3e3e3e"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_bao_xiu_dan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_de_bao_xiu_dan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon1" />

                    <TextView
                        android:id="@+id/fragmentmyImageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/mine_red_deep_bg"
                        android:padding="@dimen/dp_5"
                        android:text="立即充值"
                        android:textColor="@color/public_white"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_de_bao_xiu_dan"
                        android:text="余额"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="right"
                        android:text="￥0.00元"
                        android:textColor="#951627"
                        android:textSize="@dimen/public_font_12sp" />

                </RelativeLayout>

                <include layout="@layout/line_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_de_bao_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_de_bao_jia"
                        android:text="我的报价"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_de_jing_pai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon3" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_de_jing_pai"
                        android:text="我的竞拍"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>

                <include layout="@layout/line_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_de_jian_ding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_de_jian_ding"
                        android:text="我的鉴定"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>

                <include layout="@layout/line_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_de_shou_cang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_de_shou_cang"
                        android:text="收藏"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>

                <include layout="@layout/line_horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_de_hong_bao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon7" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_de_hong_bao"
                        android:text="天降红包"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/public_white">

                    <ImageView
                        android:id="@+id/img_wo_shi_mai_jia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@mipmap/mem_icon9" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="168dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/xuanze" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/img_wo_shi_mai_jia"
                        android:text="我是卖家"
                        android:textColor="#111111"
                        android:textSize="@dimen/public_font_12sp" />


                </RelativeLayout>
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        app:layout_collapseMode="pin">

        <android.support.v7.widget.ButtonBarLayout
            android:id="@+id/buttonBarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我的"
                android:textColor="@color/public_white"
                android:textSize="16sp" />
        </android.support.v7.widget.ButtonBarLayout>
    </android.support.v7.widget.Toolbar>
</FrameLayout>