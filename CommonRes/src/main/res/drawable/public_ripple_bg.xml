<?xml version="1.0" encoding="utf-8"?><!--<selector xmlns:android="http://schemas.android.com/apk/res/android">--><!--&lt;!&ndash;点击时手指松开的背景&ndash;&gt;--><!--<item android:color="#999999" android:state_pressed="false" />--><!--&lt;!&ndash;点击时手指未松开的背景&ndash;&gt;--><!--<item android:color="#666666" android:state_pressed="true" />--><!--&lt;!&ndash;本身的背景&ndash;&gt;--><!--<item android:color="@color/public_white" />--><!--</selector>-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时的背景颜色 -->
    <item android:drawable="@color/public_white" android:state_window_focused="false" />
    <!-- 非触摸模式下获得焦点并单击时的背景颜色 -->
    <item android:drawable="@color/public_ripple" android:state_focused="true" android:state_pressed="true" />
    <!-- 触摸模式下单击时的背景颜色 -->
    <item android:drawable="@color/public_ripple" android:state_focused="false" android:state_pressed="true" />
    <!-- 选中时的背景颜色 -->
    <item android:drawable="@color/public_ripple" android:state_selected="true" />
    <!-- 获得焦点时的背景  颜色 -->
    <item android:drawable="@color/public_ripple" android:state_focused="true" />
</selector>