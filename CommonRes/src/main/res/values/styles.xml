<resources>

    <!-- Base application theme. -->
    <!--<style name="public_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="public_AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/public_colorPrimary</item>
        <item name="colorPrimaryDark">@color/public_colorPrimaryDark</item>
        <item name="colorAccent">@color/public_colorAccent</item>
        <item name="android:windowAnimationStyle">@style/public_Activity_Animation</item>
    </style>

    <style name="public_Activity_Animation">
        <item name="android:activityOpenEnterAnimation">@anim/public_translate_right_to_center
        </item>
        <item name="android:activityOpenExitAnimation">@anim/public_translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/public_translate_left_to_center
        </item>
        <item name="android:activityCloseExitAnimation">@anim/public_translate_center_to_right
        </item>
    </style>

    <style name="public_dialog_inout_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_enter</item>
        //进入时的动画
        <item name="android:windowExitAnimation">@anim/public_dialog_exit</item>
        //退出时的动画
    </style>

    <style name="public_dialog_progress" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="public_AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <!--我的-底部item图片-->
    <style name="public_MineItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
    </style>
    <!--我的-底部字体-->
    <style name="public_MineItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/public_font_12sp</item>
        <item name="android:textColor">@color/public_mine_item_text</item>
    </style>
    <!--我的-订单图片-->
    <style name="public_MineOrderImage">
        <item name="android:layout_width">@dimen/dp_25</item>
        <item name="android:layout_height">@dimen/dp_25</item>
    </style>
    <!--我的-订单字体-->
    <style name="public_MineOrderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:textColor">@color/public_mine_order_text</item>
        <item name="android:textSize">@dimen/public_font_12sp</item>
    </style>
    <!--我的-订单LinearLayout-->
    <style name="public_MineOrderLinearLayout">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">@dimen/dp_66</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/public_ripple_bg</item>

    </style>
    <!--我的-底部item-RelativeLayout-->
    <style name="public_MineItemRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:background">@drawable/public_ripple_bg</item>
    </style>

    <style name="public_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:background">@drawable/public_btn_selector_corner_35dp</item>
        <item name="android:textColor">@color/public_white</item>
        <item name="android:textSize">@dimen/public_font_16sp</item>
    </style>

    <style name="public_CustomRadioBtn">
        <item name="android:button">@drawable/public_mycustome_radio_selctor</item>
    </style>
</resources>
