<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/public_toolbar" />


    <RelativeLayout
        android:id="@+id/rl_iu_gai_deng_lu_mi_ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">


        <TextView
            android:id="@+id/tv_xiu_gai_deng_lu_mi_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="修改登录密码"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_xiu_gai_deng_lu_mi_ma"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="请经常更换登录密码，加强账户安全"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_14sp" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_next" />

    </RelativeLayout>

    <include layout="@layout/public_line_horizontal" />

    <RelativeLayout
        android:id="@+id/rl_zhi_fu_mi_ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">


        <TextView
            android:id="@+id/tv_zhi_fu_mi_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="支付密码"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zhi_fu_mi_ma"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="使用预存款支付时使用的密码"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_14sp" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_next" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_xiu_gai_shou_ji_hao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/public_white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">


        <TextView
            android:id="@+id/tv_xiu_gai_shou_ji_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="修改手机号"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:id="@+id/tv_shou_ji_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_xiu_gai_shou_ji_hao"
            android:text="159**796"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_xiu_gai_shou_ji_hao"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="绑定后可使用手机号登录和找回密码"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/public_font_14sp" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_next" />

    </RelativeLayout>

    <include layout="@layout/public_line_horizontal" />


</LinearLayout>